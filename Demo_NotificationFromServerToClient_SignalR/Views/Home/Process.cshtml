@model Demo_NotificationFromServerToClient_SignalR.Models.ProcessExecution

@{
    ViewData["Title"] = "Process";
}

<h1>Process</h1>

<h4>ProcessExecution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Process" data-ajax-method="post"
              data-ajax="true" data-ajax-failure="failureSearch"
              data-ajax-complete="processStarted">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProcessName" class="control-label"></label>
                <input asp-for="ProcessName" class="form-control" />
                <span asp-validation-for="ProcessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessDuration" class="control-label"></label>
                <input asp-for="ProcessDuration" class="form-control" />
                <span asp-validation-for="ProcessDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        processStarted = function (xhr) {
            console.log(xhr);
                toastr.info('Proceso ' + xhr.responseJSON +' iniciado')
        }
    </script>
}
